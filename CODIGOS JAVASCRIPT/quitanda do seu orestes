function sc(){
   console.log("CONTAS:");
   Object.entries(con).forEach(([chave, valor]) => {
   console.log(`  ${chave};`);
   });
}
function op1() {
  while (true){
   console.log("VOC√ä SELECIONOU: CRIAR CONTA\nPOR FAVOR DIGITE SUAS INFORMA√á√ïES: (S PARA SAIR)\n")
   const nome = prompt("INSIRA O NOME DA CONTA:\n")
   if (nome.toUpperCase() == 'S') {
       break
   } else if(nome.trim() === ''){
       console.log("(nenhuma entrada)\n")
       continue;
   } else if (nome.length < 4){
       console.log("(desculpe, mas a senha precisa ter pelo menos 4 d√≠gitos)\n");
       continue
   } else if (con[nome]){
       console.log("(essa conta j√° existe, por favor tente outra vez)");
       continue
   }
   const senha = prompt("CRIE UMA SENHA:\n")
   if (senha.toUpperCase() == "S") {
       break;
   }
   const c = prompt("CONFIRMAR? (S/N)\n")
   if (c.toUpperCase() == 'S'){
       con[nome] = senha
       console.log("CONTA CRIADA COM SUCESSO")
       break
  } else if (c.toUpperCase() == 'N'){
      break;
  } else {
      continue;
  }
  }
}
function op2(){
   sc()
   const excluir = prompt("DIGITE O NOME DA CONTA QUE GOSTARIA DE EXCLUIR\n")
   const valor = prompt("Digite a senha para confirmar:");
   if (con[excluir] === valor) {
       delete con[excluir];
       console.log(`CONTA( ${excluir} ) EXCLU√çDA`);
   } else {
       console.log("Senha incorreta ou conta n√£o existe.");
   }
}
function op3() {
